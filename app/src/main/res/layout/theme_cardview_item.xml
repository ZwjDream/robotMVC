<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        app:cardBackgroundColor="@color/cardview_bac"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:contentPadding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_bac"
            >
            <ImageView
                android:id="@+id/news_iv"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/login_head"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/news_tv"
                android:layout_toRightOf="@id/news_iv"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/news_text_size"
                android:textColor="@color/button_text"
                android:text="我是新闻你是试试到底是多少"
                />

            <TextView
                android:id="@+id/news_topic"
                android:layout_toRightOf="@id/news_iv"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/news_text_size"
                android:textColor="@color/button_text"
                android:text="我是新闻你是试试到底是多少"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>