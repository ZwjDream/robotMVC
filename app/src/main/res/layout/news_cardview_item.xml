<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    >
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        app:cardBackgroundColor="@color/cardview_bac"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_bac"
            >
            <ImageView
                android:id="@+id/news_iv"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/login_head"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/news_tv"
                android:layout_toRightOf="@id/news_iv"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/news_text_size"
                android:textColor="@color/button_text"
                android:text="我是新闻你是试试到底是多少"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>